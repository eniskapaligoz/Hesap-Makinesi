                android:backgroundTint="@color/colorPrimary"
                android:onClick="bttnEql"
                android:text="=" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="350dp"
            android:layout_height="44dp"
